{
    "workbench.sideBar.location": "right",
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": true,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.colorTheme": "Shades of Purple",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorCustomizations": {
        "[One Dark Pro]": {
            "statusBar.background": "#1e2618",
            "statusBar.noFolderBackground": "#1e2618",
            "statusBar.debuggingBackground": "#1e2618",
            "statusBar.foreground": "#98C379"
        },
        "[Shades of Purple]": {
            "statusBar.background": "#34004a",
            "statusBar.noFolderBackground": "#34004a",
            "statusBar.debuggingBackground": "#34004a",
            "statusBar.foreground": "#e6e600"
        },
        "statusBar.background": "#B48EAD",
        "statusBar.noFolderBackground": "#B48EAD",
        "statusBar.debuggingBackground": "#B48EAD",
        "statusBar.foreground": "#434C5E"
    },
    "window.menuBarVisibility": "compact",
    "window.title": "${dirty} ${activeEditorMedium}${separator}${rootName}${separator}${remoteName}",
    "extensions.ignoreRecommendations": false,
    "editor.minimap.enabled": true,
    "editor.renderControlCharacters": true,
    "editor.cursorStyle": "block",
    "editor.cursorBlinking": "smooth",
    "editor.rulers": [ 120 ],
    "editor.formatOnSave": false,
    "editor.fontSize": 16,
    "editor.fontLigatures": true,
    "editor.tabCompletion": "on",
    "editor.wordWrap": "on",
    "editor.tabSize": 8,
    "editor.lineNumbers": "relative",
    "editor.renderWhitespace": "none",
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs":"active",
    "editor.inlayHints.enabled": "offUnlessPressed",
    "vsicons.dontShowNewVersionMessage": true,
    "explorer.confirmDragAndDrop": false,
