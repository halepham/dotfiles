    "terminal.external.linuxExec": "xterm-256color",
    "clangd.path": "clangd",
    "clangd.arguments": [
        "--all-scopes-completion",
        "--background-index",
        "--clang-tidy",
        "--completion-style=bundled",
        "--limit-results=6",
        "--suggest-missing-includes",
        "--pch-storage=memory",
        "--cross-file-rename",
        "--ranking-model=decision_forest",
        "--inlay-hints=true"
    ],
    "clangd.checkUpdates": true,
